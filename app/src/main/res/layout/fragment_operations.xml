<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.OperationsFragment"
                                                   android:id="@+id/frameLayout">
    <ImageView
            android:src="@drawable/january"
            android:layout_width="192dp"
            android:layout_height="192dp" android:id="@+id/newNoteImg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/new_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/newNoteImg" app:layout_constraintStart_toStartOf="@+id/newNoteImg"
            app:layout_constraintTop_toBottomOf="@+id/newNoteImg" style="@style/sub_header_style"/>
    <ImageView
            android:src="@drawable/ic_cartella"
            android:layout_width="@dimen/note_img_size"
            android:layout_height="@dimen/note_img_size" android:id="@+id/showNoteImg"
            app:layout_constraintStart_toEndOf="@+id/newNoteImg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/note_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/showNoteImg" app:layout_constraintEnd_toEndOf="@+id/showNoteImg"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/showNoteImg"
            style="@style/sub_header_style"/>
    <ImageView
            android:src="@drawable/ic_information"
            android:layout_width="@dimen/note_img_size"
            android:layout_height="@dimen/note_img_size" android:id="@+id/aboutImg"
            app:layout_constraintEnd_toStartOf="@+id/showNoteImg" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/newNoteImg"/>
    <TextView
            android:text="@string/information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/aboutImg" app:layout_constraintStart_toStartOf="@+id/aboutImg"
            app:layout_constraintTop_toBottomOf="@+id/aboutImg" style="@style/sub_header_style"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>